<UserControl x:Class="PDFUtil.Module.Navigation.Views.NavigationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PDFUtil.Module.Navigation.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <UserControl.Resources>
        <Style TargetType="Button" x:Key="MenuItemButton" >
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontFamily" Value="Calibri"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <StackPanel Background="{DynamicResource {x:Static SystemColors.ScrollBarBrushKey}}">
            <Button x:Name="button1" Style="{StaticResource MenuItemButton}" Content="Merge"/>
            <Button x:Name="button2" Style="{StaticResource MenuItemButton}" Content="Split"/>
            <Button x:Name="button3" Style="{StaticResource MenuItemButton}" Content="Count Pages"/>
        </StackPanel>
    </Grid>
</UserControl>
